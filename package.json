{
  "private": true,
  "version": "0.1.0",
  "name": "@tunnckocore/opensource",
  "description": "Example shareable config for @tunnckocore/scripts",
  "author": "Charlike Mike Reagent <opensource@tunnckocore.com>",
  "homepage": "https://github.com/tunnckocorehq/opensource",
  "repository": "tunnckocorehq/opensource",
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "scripts",
    "build:all": "yarn build1 && yarn build2",
    "build1": "lerna exec 'yarn start build \\\"$PWD\\\"' --scope='@tunnckocore/scripts-config'",
    "build2": "lerna exec 'yarn start build \\\"$PWD\\\"' --ignore='@tunnckocore/scripts-config'",
    "extends": "@tunnckocore/scripts-config"
  },
  "workspaces": [
    "@hela/*",
    "@tunnckocore/*"
  ],
  "devDependencies": {
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-standard-pkg": "^0.4.0",
    "@tunnckocore/config": "^3.0.2",
    "@tunnckocore/scripts": "^1.2.5",
    "@tunnckocore/scripts-config": "^0.1.0",
    "@tunnckocore/eslint-config": "^0.1.0",
    "cross-env": "^5.2.0",
    "lerna": "^3.15.0"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":onlyNpm",
      ":gitSignOff",
      ":automergePr",
      ":automergeAll",
      ":respectLatest",
      ":rebaseStalePrs",
      ":semanticCommits",
      ":disableRateLimiting",
      ":preserveSemverRanges",
      ":maintainLockFilesWeekly"
    ]
  }
}
