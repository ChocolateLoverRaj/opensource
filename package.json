{
  "name": "@tunnckocore/opensource",
  "homepage": "https://github.com/tunnckocore/opensource",
  "private": true,
  "workspaces": [
    "packages/*",
    "@tunnckocore/*",
    "@hela/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --since",
    "clean:dist": "rm -rf packages/*/dist @tunnckocore/*/dist",
    "clean:fresh": "lerna clean -y && rm -rf node_modules",
    "cleanup": "yarn clean:dist && yarn clean:fresh",
    "cr": "node create-package.js",
    "fmt": "prettier '**/*' --write",
    "hela": "node node_modules/@hela/cli/dist/build/cjs/cli.js",
    "patch:hela": "cp patches/hela-cli/index.js node_modules/@hela/cli/dist/build/cjs/index.js",
    "patch:verb": "cp patches/verb-repo-helpers/index.js node_modules/verb-repo-helpers/index.js",
    "postsetup": "yarn patch:verb && yarn patch:hela",
    "postsetup:ci": "yarn patch:verb && yarn patch:hela",
    "pre-commit": "yarn docs && yarn fmt",
    "refresh": "yarn cleanup && yarn setup",
    "release": "lerna version && lerna publish from-package",
    "setup": "yarn && yarn bootstrap",
    "setup:ci": "yarn --frozen-lockfile && yarn bootstrap"
  },
  "dependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@hela/cli": "^3.0.0-alpha.91",
    "@wessberg/rollup-plugin-ts": "^1.1.73",
    "builtin-modules": "^3.1.0",
    "enquirer": "^2.3.2",
    "eslint": "^6.4.0",
    "esm": "^3.2.25",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "prettier-plugin-pkg": "^0.4.4",
    "prettier-plugin-sh": "^0.2.0",
    "react": "^16.10.1",
    "rollup": "^1.23.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "semver": "^6.3.0",
    "typescript": "^3.7.0-beta",
    "verb": "verbose/verb#dev",
    "verb-generate-readme": "^0.8.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "hela": {
    "extends": "@hela/dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'yarn run pre-commit'",
      "commit-msg": "echo 'commitlint -E HUSKY_GIT_PARAMS'"
    }
  },
  "meta": {
    "build": [
      "koa-better-body"
    ],
    "bundle": [
      "@tunnckocore/execa",
      "parse-function"
    ]
  },
  "renovate": {
    "extends": "@tunnckocore"
  }
}
