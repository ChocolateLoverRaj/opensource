{
  "name": "gibon",
  "version": "0.1.0",
  "description": "Modern & functional UI router in ~600 bytes, built on HTML5 History API",
  "repository": "tunnckoCore/gibon",
  "author": "Charlike Mike Reagent <@tunnckoCore> (http://i.am.charlike.online)",
  "precommit.silent": true,
  "browser": "dist/gibon.min.js",
  "module": "src/index.js",
  "main": "dist/gibon.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard src/index.js --fix --verbose",
    "pretest": "npm run lint",
    "test": "node test.js",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "precommit": "git add --all",
    "commit": "git-cz",
    "example:nanomorph": "budo -P public/nanomorph.js:client.js --dir public",
    "example:simple": "budo -P public/simple.js:client.js --dir public",
    "example:dom": "budo -P public/dom.js:client.js --dir public",
    "prebuild": "rm -rf dist/ && rm -rf public/dist/",
    "build": "npm run rollup && npm run minify && npm run compress",
    "postbuild": "cp -R dist/ public/",
    "rollup": "rollup -c -f umd -n gibon",
    "minify": "uglifyjs dist/gibon.js -o dist/gibon.min.js -cm",
    "compress": "zopfli dist/gibon.min.js -i2000"
  },
  "dependencies": {},
  "devDependencies": {
    "bel": "^4.5.1",
    "budo": "^9.4.7",
    "commitizen": "^2.9.2",
    "cz-conventional-changelog": "^1.2.0",
    "mukla": "^0.4.8",
    "nanomorph": "^2.1.3",
    "pre-commit": "^1.2.2",
    "rollup": "^0.41.4",
    "standard": "^8.6.0",
    "standard-version": "^4.0.0",
    "uglify-js": "^2.7.5"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "keywords": [],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3,
      "footer": ""
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "always-done",
        "minibase",
        "try-catch-core"
      ],
      "highlight": "always-done"
    },
    "lint": {
      "reflinks": true
    }
  },
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  }
}
