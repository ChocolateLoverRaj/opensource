{
  "name": "gibon",
  "version": "0.3.2",
  "description": "Functional client-side router in ~570 bytes, built on HTML5 History API",
  "repository": "tunnckoCore/gibon",
  "author": "Charlike Mike Reagent <@tunnckoCore> (https://i.am.charlike.online)",
  "precommit.silent": true,
  "module": "dist/gibon.es.js",
  "main": "dist/gibon.common.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard index.js test.js --fix --verbose",
    "test": "npm-run-all -s lint test:*",
    "test:api": "nyc --reporter lcov node test.js",
    "test:report": "nyc report",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "git": "npm-run-all -s git:*",
    "git:add": "git add --all",
    "git:cz": "git-cz",
    "commit": "npm-run-all -s build test git",
    "build": "npm-run-all -s build:*",
    "build:clean": "rimraf dist",
    "build:browser": "rollup -c --environment BROWSER",
    "build:node": "rollup -c --environment NODE",
    "build:show": "ls -al dist",
    "example:nanomorph": "budo public/nanomorph.js:client.js --dir public -P",
    "example:simple": "budo public/simple.js:client.js --dir public -P",
    "example:dom": "budo public/dom.js:client.js --dir public -P"
  },
  "dependencies": {},
  "devDependencies": {
    "bel": "^4.6.1",
    "budo": "^10.0.3",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "mukla": "^0.4.9",
    "nanomorph": "^4.0.5",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.3.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-gzip": "^1.1.0",
    "rollup-plugin-uglify": "^1.0.2",
    "standard": "^10.0.2",
    "standard-version": "^4.0.0"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "dom",
    "functional",
    "history",
    "push",
    "pushstate",
    "html5",
    "javascript",
    "minimal",
    "minimalist",
    "modern",
    "router",
    "routing",
    "ui",
    "vanilla",
    "virtual-dom",
    "virtual"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "always-done",
        "minibase",
        "try-catch-core",
        "nanomorph",
        "bel",
        "hyperx",
        "redom",
        "hyperapp"
      ],
      "highlight": "hyperapp"
    },
    "reflinks": [
      "always-done",
      "async-done",
      "base",
      "bel",
      "charlike",
      "commitizen",
      "dezalgo",
      "hyperx",
      "once",
      "standard-version",
      "verb",
      "verb-generate-readme",
      "hyperapp",
      "nanomorph"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
