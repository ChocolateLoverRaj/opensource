{
  "name": "gibon",
  "version": "0.2.0",
  "description": "Modern & functional UI router in ~600 bytes, built on HTML5 History API",
  "repository": "tunnckoCore/gibon",
  "author": "Charlike Mike Reagent <@tunnckoCore> (https://i.am.charlike.online)",
  "precommit.silent": true,
  "browser": "dist/gibon.iife.js",
  "module": "src/index.js",
  "main": "dist/gibon.umd.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard src/index.js --fix --verbose",
    "pretest": "npm run lint",
    "test": "node test.js",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "precommit": "git add --all",
    "commit": "git-cz",
    "example:nanomorph": "budo -P public/nanomorph.js:client.js --dir public",
    "example:simple": "budo -P public/simple.js:client.js --dir public",
    "example:dom": "budo -P public/dom.js:client.js --dir public",
    "clean": "rimraf dist",
    "build": "npm-run-all -s clean rollup compress",
    "postbuild": "ls -al dist/",
    "rollup": "rollup -c",
    "compress": "npm-run-all compress:*",
    "compress:iife": "zopfli $npm_package_browser -i2000",
    "compress:umd": "zopfli $npm_package_main -i2000"
  },
  "dependencies": {},
  "devDependencies": {
    "bel": "^4.5.1",
    "budo": "^9.4.7",
    "commitizen": "^2.9.2",
    "cz-conventional-changelog": "^1.2.0",
    "mukla": "^0.4.8",
    "nanomorph": "^2.1.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-uglify": "^1.0.1",
    "standard": "^8.6.0",
    "standard-version": "^4.0.0"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "keywords": [
    "dom",
    "functional",
    "history",
    "push",
    "pushstate",
    "html5",
    "javascript",
    "minimal",
    "minimalist",
    "modern",
    "router",
    "routing",
    "ui",
    "vanilla",
    "virtual-dom",
    "virtual"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  },
  "verb": {
    "run": true,
    "toc": true,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "always-done",
        "minibase",
        "try-catch-core",
        "nanomorph",
        "bel",
        "hyperx",
        "redom",
        "hyperapp"
      ],
      "highlight": "always-done"
    },
    "reflinks": [
      "always-done",
      "async-done",
      "base",
      "bel",
      "charlike",
      "commitizen",
      "dezalgo",
      "hyperx",
      "once",
      "standard-version",
      "verb",
      "verb-generate-readme",
      "hyperapp",
      "nanomorph"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
