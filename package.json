{
  "private": true,
  "name": "@tunnckocore/opensource",
  "homepage": "https://github.com/tunnckocore/opensource",
  "workspaces": [
    "packages/*",
    "@tunnckocore/*"
  ],
  "scripts": {
    "setup": "yarn && lerna bootstrap",
    "setup:ci": "yarn --frozen-lockfile && lerna bootstrap",
    "fresh": "lerna clean -y && rm -rf node_modules && yarn setup",
    "pre-commit": "jest -c jest.config.js",
    "lint": "jest -c jest.lint.config.js",
    "test": "jest -c jest.test.config.js",
    "build": "jest -c jest.build.config.js"
  },
  "dependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@tunnckocore/babel-preset": "^0.2.1",
    "@tunnckocore/eslint-config": "^4.1.5",
    "@tunnckocore/jest-runner-babel": "^3.1.0",
    "@tunnckocore/jest-runner-eslint": "^0.3.1",
    "@tunnckocore/prettier-config": "^0.2.2",
    "@tunnckocore/typescript-config": "^0.3.1",
    "babel-plugin-add-module-exports": "^1.0.2",
    "create-jest-runner": "^0.5.3",
    "eslint": "^6.4.0",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "eslint-plugin-node": "^10.0.0"
  },
  "prettier": "@tunnckocore/prettier-config",
  "eslintConfig": {
    "extends": "@tunnckocore"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'yarn test:commit'",
      "commit-msg": "echo 'commitlint -E HUSKY_GIT_PARAMS'"
    }
  }
}
