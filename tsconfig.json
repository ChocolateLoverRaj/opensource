{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./@tunnckocore/typescript-config/monorepo.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declarationDir": "dist/types",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "paths": {
      "*": ["packages/*", "@tunnckocore/*"]
    },
    "noImplicitAny": false
  },
  "include": [
    "**/packages/*/**/*.d.ts",
    "**/packages/*/**/*.ts",
    "**/@tunnckocore/*/**/*.ts",
    "**/@tunnckocore/*/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
