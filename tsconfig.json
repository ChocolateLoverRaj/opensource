{
  "$schema": "http://json.schemastore.org/tsconfig",
  // "extends": "@tunnckocore/typescript-config/monorepo",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["@packages/*", "@tunnckocore/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"],
    // "declarationDir": "dist/typings",
    "noImplicitAny": false
  },
  "include": [
    "**/@packages/*/**/*.ts",
    "**/@packages/*/**/*.d.ts",
    "**/@tunnckocore/*/**/*.ts",
    "**/@tunnckocore/*/**/*.d.ts"
  ]
}
