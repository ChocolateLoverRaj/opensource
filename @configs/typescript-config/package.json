{
  "name": "@tunnckocore/typescript-config",
  "version": "1.1.2",
  "licenseStart": 2019,
  "license": "MPL-2.0",
  "description": "Shareable TypeScript configs for all @tunnckoCore projects",
  "author": "Charlike Mike Reagent <opensource@tunnckocore.com> (https://tunnckocore.com)",
  "homepage": "https://tunnckocore.com/opensource",
  "funding": "https://ko-fi.com/tunnckoCore/commissions",
  "repository": {
    "type": "git",
    "url": "https://github.com/tunnckoCore/opensource.git",
    "directory": "@configs/typescript-config"
  },
  "main": "tsconfig.json",
  "module": "tsconfig.json",
  "files": [
    "monorepo.json",
    "no-type-gen.json",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=10.13"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "peerDependencies": {
    "tslib": "^1.10.0",
    "typescript": "^3.7.5"
  },
  "cov": {
    "color": "grey"
  },
  "keywords": [
    "bundling",
    "commonjs",
    "devest",
    "esmodules",
    "hela",
    "monorepo",
    "resolve",
    "rollup",
    "tsconfig",
    "tunnckocorehq",
    "typescript"
  ],
  "tsconfig": "tsconfig.json",
  "verb": {
    "readme": "../../readme-template.md",
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 4
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "lint": {
      "reflinks": true
    },
    "reflinks": [],
    "related": {
      "list": []
    }
  }
}
