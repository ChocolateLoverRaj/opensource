{
  "name": "@tunnckocore/renovate-config",
  "version": "1.0.7",
  "description": "Shareable Renovate config for all @tunnckoCore projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/tunnckoCore/opensource.git",
    "directory": "configs/renovate-config"
  },
  "homepage": "https://tunnckocore.com/opensource",
  "author": "Charlike Mike Reagent <opensource@tunnckocore.com> (https://tunnckocore.com)",
  "license": "MPL-2.0",
  "engines": {
    "node": ">=10.13"
  },
  "main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "src"
  ],
  "keywords": [
    "dependency updates",
    "deps",
    "devest",
    "esmodules",
    "hela",
    "renovate",
    "renovate-config",
    "renovate-preset",
    "renovateapp",
    "renovatebot",
    "security",
    "shareable-configs",
    "tunnckocorehq"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "cov": {
    "color": "grey"
  },
  "jestCov": {
    "color": "grey"
  },
  "licenseStart": 2017,
  "renovate-config": {
    "default": {
      "extends": [
        ":assignee(@tunnckoCore)",
        ":automergeAll",
        ":automergeLinters",
        ":automergeMajor",
        ":automergePr",
        ":automergeTypes",
        ":enableVulnerabilityAlerts",
        ":gitSignOff",
        ":label(dependencies)",
        ":maintainLockFilesWeekly",
        ":onlyNpm",
        ":prConcurrentLimit20",
        ":preserveSemverRanges",
        ":prHourlyLimitNone",
        ":prNotPending",
        ":rebaseStalePrs",
        ":semanticCommits",
        ":separateMultipleMajorReleases",
        "config:base"
      ],
      "rollbackPrs": true,
      "vulnerabilityAlerts": {
        "enabled": true,
        "labels": [
          "security"
        ],
        "extends": [
          ":assignAndReview(@tunnckoCore)"
        ]
      }
    }
  },
  "verb": {
    "readme": "../../readme-template.md",
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 4
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "lint": {
      "reflinks": true
    },
    "reflinks": [],
    "related": {
      "list": []
    }
  }
}
